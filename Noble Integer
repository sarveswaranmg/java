import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    int[] A ={2,1};
	    System.out.println(remove(A));
	}
	public static int remove(int[] A){
	    int n = A.length;
	    int ans = 0;
	    Arrays.sort(A);
	    for(int i = 0;i<n;i++){
	        ans = ans + (A[i]*(n-i));
	    }
	    return ans;
	}
}



